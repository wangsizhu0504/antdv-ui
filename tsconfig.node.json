{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "lib": ["ESNext"],
    "resolveJsonModule": true,
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": [
    "build/**/*",
    "build/**/*.json",
    "scripts/**/*",
    "packages/version/*.ts",
    "packages/antdv-ui/package.json"
  ],
  "exclude": ["dist"]
}
