{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": ["DOM", "ESNext"],
    "jsx": "preserve",
    "experimentalDecorators": true,
    "jsxImportSource": "vue",
    "useDefineForClassFields": true,
    "module": "CommonJS",
    "baseUrl": ".",
    "paths": {
      "@antdv/ui/es/*": ["components/*"]
    },
    "types": ["node"],
    "resolveJsonModule": true,
    "allowJs": true,
    "stripInternal": true,
    "isolatedModules": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [
    "components",
    "typings/components.d.ts",
    "typings/env.d.ts",
    "typings/typings.d.ts"
  ],
  "exclude": [
    "node_modules",
    "site",
    "**/dist",
    "**/__tests__/**/*",
    "**/gulpfile.ts",
    "**/*.md"
  ]
}
