{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "lib": ["DOM", "ESNext"],
    "useDefineForClassFields": true,
    "module": "CommonJS",
    "resolveJsonModule": true,
    "types": ["node"],
    "allowJs": true,
    "stripInternal": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "include": [
    "packages",
    "typings/components.d.ts",
    "typings/env.d.ts",
    "typings/volar.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/dist",
    "**/__tests__/**/*",
    "**/gulpfile.ts",
    "**/*.md"
  ]
}
