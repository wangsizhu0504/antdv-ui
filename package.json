{
  "license": "MIT",
  "engines": {
    "node": ">= 16"
  },
  "scripts": {
    "cz": "czg",
    "dev": "npm run routes && vite serve site",
    "preview": "vite preview site",
    "build:site": "vite build site",
    "test": "vitest",
    "gen:version": "esno scripts/gen-version.ts",
    "token": "pnpm run token:meta && pnpm run token:collect",
    "token:meta": "node scripts/generate-token-meta.js",
    "token:collect": "esno scripts/collect-token-statistic.ts",
    "routes": "esno scripts/generate-routes.ts",
    "build": "pnpm run -C build start",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx,.md,.json --max-warnings 0 --cache",
    "lint:fix": "pnpm run lint --fix",
    "lint:commit": "commitlint --from $(git merge-base origin/dev HEAD) --to HEAD > ./commit-lint.txt",
    "typecheck": "run-p typecheck:web typecheck:node",
    "typecheck:web": "vue-tsc -p tsconfig.web.json --composite false --noEmit",
    "typecheck:node": "tsc -p tsconfig.node.json --noEmit",
    "clean": "pnpm run clean:dist && pnpm run -r --parallel clean",
    "clean:dist": "rimraf dist",
    "prepare": "husky install",
    "release": "bumpp -r && pnpm -r publish",
    "eslint": "eslint . --fix"
  },
  "devDependencies": {
    "@babel/plugin-transform-typescript": "^7.22.15",
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@kriszu/eslint-config": "^2.0.11",
    "@types/fs-extra": "^11.0.2",
    "@types/jsdom": "^21.1.3",
    "@types/node": "^20.8.3",
    "@vitejs/plugin-vue": "^4.4.0",
    "@vitejs/plugin-vue-jsx": "^3.0.2",
    "@vue/compiler-sfc": "^3.3.4",
    "bumpp": "^9.2.0",
    "eslint": "^8.51.0",
    "esno": "^0.17.0",
    "fetch-jsonp": "^1.3.0",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.10",
    "husky": "^8.0.3",
    "jsdom": "22.1.0",
    "lint-staged": "^13.3.0",
    "picocolors": "^1.0.0",
    "progress": "^2.0.3",
    "qs": "^6.11.2",
    "rimraf": "^5.0.5",
    "tinycolor2": "^1.6.0",
    "typedoc": "^0.24.8",
    "typescript": "^5.2.2",
    "unbuild": "^1.2.1",
    "vite": "^4.4.11",
    "vite-plugin-dts": "^3.6.0",
    "vitest": "^0.33.0",
    "vue-request": "^2.0.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "vite",
        "react",
        "react-dom"
      ]
    }
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx,md,json}": "eslint --fix"
  }
}
